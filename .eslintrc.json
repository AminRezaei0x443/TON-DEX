{
    "extends": [
        "react-app",
        "react-app/jest",
        "airbnb",
        "airbnb-typescript",
        "prettier"
    ],
    "rules": {
        "no-trailing-spaces": "warn",
        "no-multi-spaces": "warn",
        "object-curly-spacing": "warn",
        "react/jsx-one-expression-per-line": "off",
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "indent": [
            "warn",
            2
        ]
    },
    "parserOptions": {
        "project": [
            "./tsconfig.json"
        ]
    }
}