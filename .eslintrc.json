{
    "extends": [
        "react-app",
        "react-app/jest",
        "prettier"
    ],
    "rules": {
        "no-trailing-spaces": "warn",
        "no-multi-spaces": "warn",
        "object-curly-spacing": [
            "warn",
            "always"
        ],
        "react/jsx-one-expression-per-line": "off",
        "react/require-default-props": "off",
        "indent": [
            "warn",
            2
        ],
        "@typescript-eslint/no-unused-vars": "warn",
        "quotes": [
            "warn",
            "double"
        ],
        "semi": "error"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": [
            "./tsconfig.json"
        ]
    }
}